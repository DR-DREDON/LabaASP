@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using MVC_Web_App.Models
@model MVC_Web_App.Models.Tool
<h2>Добавить кофе в базу данных</h2>

<form asp-action="Create" asp-controller="home">
    <p>
        <label asp-for="Tool_type">Тип инструмента</label><br />
        <select asp-for="Id_type_tool" asp-items="ViewBag.Tool_types"></select>
    </p>
    <p>
        <label asp-for="Tool_material">Материал инструмента</label><br />
        <input type="text" asp-for="Tool_material" />
    </p>
    <p>
        <label asp-for="Tool_radius">Радиус инструмента</label><br />
        <input type="number" asp-for="Tool_radius" />
    </p>
    <p>
        <label asp-for="Tool_rounding_radius">Радиус скругления режущей кромки</label><br />
        <input type="number" asp-for="Tool_rounding_radius" />
    </p>
    <p>
        <label asp-for="Tool_material">Производитель</label><br />
        <input type="text" asp-for="Tool_manufacturer" />
    </p>
    <p>
        <input type="submit" value="Отправить" />
    </p>
</form>